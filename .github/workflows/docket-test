name: Docker Test

on:
  push:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Build Docker image
        run: docker build -t my-app .

      - name: Run tests
        run: docker run -v ${{ github.workspace }}/test-results:/app/test-results --network host my-app npm test
